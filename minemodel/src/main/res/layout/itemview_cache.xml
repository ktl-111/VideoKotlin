<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_itemview_cache_img"
        android:layout_width="150dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_itemview_cache_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/start" />

    <TextView
        android:id="@+id/tv_itemview_cache_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/iv_itemview_cache_state"
        android:layout_toRightOf="@+id/iv_itemview_cache_img" />

    <TextView
        android:id="@+id/tv_itemview_cache_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/iv_itemview_cache_state"
        android:layout_toRightOf="@+id/iv_itemview_cache_img" />
</RelativeLayout>