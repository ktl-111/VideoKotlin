<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer android:id="@+id/gsy_video"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="250dp"></com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_videodatails_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/erv_videodetails_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.jude.easyrecyclerview.EasyRecyclerView>
    </RelativeLayout>
</LinearLayout>